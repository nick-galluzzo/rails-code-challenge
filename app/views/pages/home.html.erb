<h1>Pages#home</h1>
<div class="article-categories">
  <% @categories.each do |category| %>
  <div class="caregory-name">
    <h1><%=  link_to category.name, articles_path(category: category) %></h1>
  </div>
  <div class="category-articles">
    <% category.last_3_articles.each do |article| %>
      <p><%= link_to article.title, article_path(article) %></p>
      <% if article.user == current_user %>
        <!--  <p><%= link_to 'delete', article_path(article.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></p> -->
        <% end %>
    <% end %>
  </div>
  <% end %>
</div>
